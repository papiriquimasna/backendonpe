# ========================================
# VARIABLES DE ENTORNO PARA RAILWAY
# ========================================
# Copia estas variables en Railway → Settings → Variables

# Perfil de Spring (usa 'supabase' para producción)
SPRING_PROFILES_ACTIVE=supabase

# Puerto (Railway lo asigna automáticamente, pero puedes especificarlo)
PORT=8080

# ========================================
# DATABASE (Supabase PostgreSQL)
# ========================================
DATABASE_URL=jdbc:postgresql://db.tu-proyecto.supabase.co:6543/postgres
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=tu-password-de-supabase

# ========================================
# SUPABASE API
# ========================================
SUPABASE_URL=https://tu-proyecto.supabase.co
SUPABASE_ANON_KEY=tu-anon-key-de-supabase
SUPABASE_SERVICE_ROLE_KEY=tu-service-role-key-de-supabase

# ========================================
# JWT
# ========================================
JWT_SECRET=miClaveSecretaSuperSeguraParaJWT2024ProyectoPeruano123456789

# ========================================
# EMAIL (Brevo SMTP)
# ========================================
MAIL_USERNAME=tu-usuario@smtp-brevo.com
MAIL_PASSWORD=tu-password-de-brevo-aqui

# ========================================
# API RENIEC (Consulta DNI)
# ========================================
RENIEC_API_TOKEN=tu-token-de-apisperu-aqui
